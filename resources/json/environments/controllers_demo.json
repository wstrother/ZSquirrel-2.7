{
  "sprites": [
    {
      "name": "Player",
      "class": "Sprite",
      "group": "sprite_group",
      "position": [200, 100],
      "controller": ["environment", 0],
      "GraphicsInterface": {
        "set_image": ["squirrel.png", [0, 0, 50, 50]]
      },
      "ContDemoInterface": {
        "move_sprite": 2.5
      }
    },

    {
      "name": "Hud Box",
      "class": "ContainerSprite",
      "HudInterface": {
        "set_style": "default_style.json",
        "set_container_image": true,
        "set_controller_hud": ["environment", 0]
      }
    },

    {
      "name": "Command Hud",
      "class": "ContainerSprite",
      "controller": ["environment", 0],
      "position": [400, 0],
      "ContDemoInterface": {
        "set_conditions_hud": [
          ["Dpad", "A"],
          ["NOT_DOWN", 1, "!=", 1],
          ["NOT_RIGHT", 3, "!=", 1],
          ["DOWN", 1, "==", 1],
          ["RIGHT", 3, "==", 1],
          ["PUNCH", 4, "==", 1],
          ["QCR1", "DOWN", "and", "NOT_RIGHT"],
          ["QCR2", "DOWN", "and", "RIGHT"],
          ["QCR3", "RIGHT", "and", "NOT_DOWN"]
        ]
      }
    },

    {
      "name": "Step Hud 1",
      "class": "ContainerSprite",
      "controller": ["environment", 0],
      "position": [600, 0],
      "ContDemoInterface": {
        "set_command_step_hud": [
          ["Dpad", "A"],
          "QCR", 12,
          "QCR3", "QCR1", "QCR2"
        ]
      }
    },

    {
      "name": "Step Hud 2",
      "class": "ContainerSprite",
      "controller": ["environment", 0],
      "position": [600, 50],
      "ContDemoInterface": {
        "set_command_step_hud": [
          ["Dpad", "A"],
          "QCPUNCH", 1,
          "PUNCH"
        ]
      }
    },

    {
      "name": "Fireball Hud",
      "class": "ContainerSprite",
      "group": "sprite_group",
      "controller": ["environment", 0],
      "ContDemoInterface": {
        "set_command_input_hud": [
          ["Dpad", "A"],
          "Fireball",
          12, "QCR", "QCPUNCH"
        ]
      }
    }
  ],

  "layers": [
    {
      "json": "demo_env.json",
      "ControllerInterface": {
        "load_controllers": [
          "64_controller.json",
          "default_controller.json"
        ]
      }
    }
  ]
}